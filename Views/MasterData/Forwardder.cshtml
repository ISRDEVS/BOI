@using System.Data;
@model DataTable;
@{
	Layout = "_Homes";
	int num = 1;
}

<div class="content-wrapper">
	<section class="content-header">
		<h1><i class="fa fa-handshake-o"></i> Forwarder List</h1>
	</section>
	<section class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="nav-tabs-custom">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#shipperlist" data-toggle="tab">Forwarder List</a></li>
						<li><a href="#newitem" data-toggle="tab">New Item</a></li>
					</ul>
					<div class="tab-content">
						<div class="active tab-pane" id="shipperlist">
							<table id="tbl1" class="table table-bordered table-hover">
								<thead class="p-3 mb-2 bg-info text-white text-center">
									<tr>
										<th>Item</th>
										<th>MODE</th>
										<th>Freight Forwarder</th>
										<th>City</th>
										<th>Country</th>
										<th>NAME</th>
										<th>Position</th>
										<th>Email address</th>
										<th>Office Phone</th>
										<th>Fax</th>
										<th>Cell Phone</th>
										<th></th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									@foreach (DataRow rows in Model.Rows)
									{
										<tr>
											<td style="width: 50px;text-align: center">@num</td>
											<td style="width: 150px;text-align: center">@rows["mode"]</td>
											<td>@rows["freightForwarder"]</td>
											<td>@rows["city"]</td>
											<td>@rows["country"]</td>
											<td>@rows["name"]</td>
											<td>@rows["position"]</td>
											<td>@rows["emailaddress"]</td>
											<td>@rows["officephone"]</td>
											<td>@rows["fax"]</td>
											<td>@rows["cellphone"]</td>
											<td class="text-center" style="width: 60px;text-align: center">
												<button class="btn btn-link font-weight-light" style="padding: 0pt">Delete</button>
											</td>
											<td class="text-center" style="width: 60px;text-align: center">
												<button type="button" class="btn btn-link font-weight-danger" style="padding: 0pt" data-toggle="modal" data-target="#modal-default">
													Update
												</button>
												<!-- <button class="btn btn-link font-weight-danger" style="padding: 0pt">Update</button> -->
											</td>
										</tr>
										num++;
									}
								</tbody>
							</table>
						</div>
						<!-- /.tab-pane -->


						<div class="tab-pane" id="newitem">
							<form class="form-horizontal" id="addforwarderlistfrom">
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">MODE</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="MODE" id="MODE" placeholder="MODE">
									</div>
								</div>
								<div class="form-group">
									<label for="inputEmail" class="col-sm-2 control-label">Freight Forwarder</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="FreightForwarder" id="FreightForwarder" placeholder="Freight Forwarder">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">City</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="City" id="City" placeholder="City">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">Country</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="Country" id="Country" placeholder="Country">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">NAME</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="NAME" id="NAME" placeholder="NAME">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">Position</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="Position" id="Position" placeholder="Position">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">Email Address</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="Emailaddress" id="Emailaddress" placeholder="Email Address">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">Office Phone</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="Officephone" id="Officephone" placeholder="Office Phone">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">Fax</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="Fax" id="Fax" placeholder="Fax">
									</div>
								</div>
								<div class="form-group">
									<label for="inputName" class="col-sm-2 control-label">Cell Phone</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="Cellphone" id="Cellphone" placeholder="Cell Phone">
									</div>
								</div>
								<div class="col-sm-2"></div>
								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<button type="button" onclick="SaveData('addforwarderlistfrom','Forwarder','SavesForwarderlist')" class="btn btn-success">Save</button>
									</div>
								</div>
							</form>
						</div>
						<!-- /.tab-pane -->
					</div>
					<!-- /.tab-content -->
				</div>
				<!-- /.nav-tabs-custom -->
			</div>
		</div>
	</section>

</div>

<div class="modal fade" id="modal-default">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title">Update Forwarder  List</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">MODE</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="MODE">
						</div>
					</div>
					<div class="form-group">
						<label for="inputEmail" class="col-sm-2 control-label">Freight Forwarder</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="description" placeholder="Freight Forwarder">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">City</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="City">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">Country</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="Country">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">NAME</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="NAME">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">Position</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="Position">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">Email Address</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="Email Address">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">Office Phone</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="Office Phone">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">Fax</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="Fax">
						</div>
					</div>
					<div class="form-group">
						<label for="inputName" class="col-sm-2 control-label">Cell Phone</label>
						<div class="col-sm-8">
							<input type="text" class="form-control" id="shipper" placeholder="Cell Phone">
						</div>
					</div>

				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
<!-- /.modal -->
