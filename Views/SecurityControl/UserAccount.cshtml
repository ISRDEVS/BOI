
@{
	Layout = "_Homes";
}

<div class="content-wrapper">
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="box box-info">
					<div class="box-header with-border">
						<h3 class="box-title">
							<i class="fa fa-folder-open-o"></i>
							<b> User Accounts</b>
						</h3>
						<button type="submit" class="btn btn-sm btn-info pull-right" style="margin-left: 10px" data-toggle="modal"
								data-target="#NewUserModal" aria-expanded="true">
							New Accounts
						</button>
						<button type="submit" class="btn btn-sm btn-info pull-right" style="margin-left: 10px" data-toggle="modal"
								data-target="#NewGroupModal" aria-expanded="true">
							New User Group
						</button>
					</div>
					<!-- form start -->
					<div class="box-body">
						<div class="box-info with-border">
							<table id="example1" class="table table-bordered table-hover">
								<thead class="p-3 mb-2 bg-info text-white text-center">
									<tr>
										<th>User Group</th>
										<th>Badge No</th>
										<th>User Name</th>
										<th>Email Address</th>
										<th>Ext</th>
										<th>Department</th>
										<th>Login Name</th>
										<th>Password</th>
										<th></th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--New Item Modal-->
	<div class="modal fade" id="NewUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">User Accounts</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form>
						<div class="form-group">
							<label class="col-form-label">User Group :</label>
							<select class="form-control select2" style="width: 100%;">
								<option selected="selected"></option>
							</select>
						</div>
						<!--Badge No-->
						<div class="form-group">
							<label class="col-form-label">Badge No :</label>
							<input type="text" class="form-control" id="defthai" placeholder="Badge No">
						</div>
						<!--User Name-->
						<div class="form-group">
							<label class="col-form-label">User Name :</label>
							<input type="text" class="form-control" id="defeng" placeholder="User Name">
						</div>
						<!--def-->
						<div class="form-group">
							<label class="col-form-label">Email Address :</label>
							<input type="text" class="form-control" id="des" placeholder="description">
						</div>
						<!--Ext-->
						<div class="form-group">
							<label class="col-form-label">Ext :</label>
							<input type="text" class="form-control" id="unit" placeholder="Ext">
						</div>
						<!--Department-->
						<div class="form-group">
							<label class="col-form-label">Department :</label>
							<input type="text" class="form-control" id="unit" placeholder="Department">
						</div>
						<!--User Namet-->
						<div class="form-group">
							<label class="col-form-label">User Name :</label>
							<input type="text" class="form-control" id="unit" placeholder="User Name" required>
						</div>
						<!--Password-->
						<div class="form-group">
							<label class="col-form-label">Password :</label>
							<input type="text" class="form-control" id="unit" placeholder="Password" required>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save</button>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="NewGroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">User Group</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label class="col-form-label">User Group :</label>
						<input type="text" class="form-control" id="defthai" placeholder="User Group">
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save</button>
				</div>
			</div>
		</div>
	</div>
</div>


